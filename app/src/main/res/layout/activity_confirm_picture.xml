<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.errorlabs.spotface.Activities.Register.ConfirmPicture">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm if the photo is okay"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/img_view">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Confirm"
            android:id="@+id/yes"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:layout_below="@+id/img_view"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Click again"
            android:background="@color/yellow"
            android:layout_marginTop="20dp"
            android:id="@+id/click_again"
            android:textStyle="bold"
            android:layout_below="@+id/yes" />

    </RelativeLayout>

</RelativeLayout>
</ScrollView>